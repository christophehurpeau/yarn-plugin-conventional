{
  "name": "yarn-plugin-conventional-version",
  "private": true,
  "version": "1.0.0",
  "description": "yarn berry versionning using conventional commits",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/yarn-plugin-conventional-version.git",
  "homepage": "https://github.com/christophehurpeau/yarn-plugin-conventional-version",
  "type": "module",
  "engines": {
    "node": ">=18.12.0"
  },
  "packageManager": "yarn@4.0.0-rc.45",
  "scripts": {
    "build": "builder build plugin && mv bundles/@yarnpkg/plugin-conventional-version.js bundles/@yarnpkg/plugin-conventional-version.cjs",
    "build:dev": "builder build plugin --no-minify --source-map && mv bundles/@yarnpkg/plugin-conventional-version.js bundles/@yarnpkg/plugin-conventional-version.dev.cjs",
    "checks": "node scripts/check-package.js",
    "clean": "rm -Rf dist",
    "lint": "yarn run lint:prettier && tsc && yarn run lint:eslint",
    "lint:eslint": "eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet *.{js,cjs,mjs} src scripts",
    "lint:prettier": "pob-root-prettier --check .",
    "lint:prettier:fix": "pob-root-prettier --write .",
    "postinstall": "pob-root-postinstall",
    "start": "pob-watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest  --coverage --coverageReporters=json --coverageReporters=text",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "watch": "pob-watch"
  },
  "prettier": "@pob/root/prettier-config",
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": [
      "<rootDir>/sources/**/__tests__/**/*.ts",
      "<rootDir>/sources/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "sources/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "jest-esbuild",
        {
          "format": "esm",
          "target": "node18"
        }
      ]
    },
    "testEnvironment": "node"
  },
  "resolutions": {
    "conventional-changelog-core@7.0.0": "patch:conventional-changelog-core@npm%3A7.0.0#./.yarn/patches/conventional-changelog-core-npm-7.0.0-fd50689040.patch",
    "conventional-changelog-writer@^7.0.0": "patch:conventional-changelog-writer@npm%3A7.0.1#./.yarn/patches/conventional-changelog-writer-npm-7.0.1-7f3f5e338c.patch",
    "conventional-changelog-writer@7.0.1": "patch:conventional-changelog-writer@npm%3A7.0.1#./.yarn/patches/conventional-changelog-writer-npm-7.0.1-7f3f5e338c.patch",
    "conventional-changelog-conventionalcommits@7.0.2": "patch:conventional-changelog-conventionalcommits@npm%3A7.0.2#./.yarn/patches/conventional-changelog-conventionalcommits-npm-7.0.2-f878f86efe.patch",
    "conventional-changelog-conventionalcommits@npm:^5.0.0": "patch:conventional-changelog-conventionalcommits@npm%3A7.0.2#./.yarn/patches/conventional-changelog-conventionalcommits-npm-7.0.2-f878f86efe.patch",
    "conventional-changelog-conventionalcommits@^6.0.0": "patch:conventional-changelog-conventionalcommits@npm%3A7.0.2#./.yarn/patches/conventional-changelog-conventionalcommits-npm-7.0.2-f878f86efe.patch"
  },
  "dependencies": {
    "@octokit/rest": "20.0.2",
    "@yarnpkg/cli": "3.6.1",
    "@yarnpkg/core": "3.5.2",
    "@yarnpkg/fslib": "2.10.3",
    "@yarnpkg/shell": "3.2.5",
    "clipanion": "3.2.0-rc.4",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "conventional-changelog-core": "7.0.0",
    "conventional-changelog-writer": "7.0.1",
    "semver": "7.5.4",
    "typanion": "3.13.0"
  },
  "devDependencies": {
    "@pob/commitlint-config": "6.0.2",
    "@pob/eslint-config": "51.0.0",
    "@pob/eslint-config-typescript": "51.0.0",
    "@pob/root": "8.4.2",
    "@types/conventional-changelog-core": "4.2.5",
    "@types/conventional-recommended-bump": "9.0.2",
    "@types/jest": "29.5.6",
    "@yarnpkg/builder": "3.3.0",
    "check-package-dependencies": "6.8.0",
    "eslint": "8.45.0",
    "jest": "29.7.0",
    "jest-esbuild": "0.3.0",
    "typescript": "5.2.2"
  }
}
