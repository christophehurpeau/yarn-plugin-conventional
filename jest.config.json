{
  "cacheDirectory": "./node_modules/.cache/jest",
  "testMatch": [
    "<rootDir>/sources/**/__tests__/**/*.ts",
    "<rootDir>/sources/**/*.test.ts"
  ],
  "collectCoverageFrom": ["sources/**/*.ts"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.ts$": [
      "jest-esbuild",
      {
        "target": "node20",
        "format": "esm"
      }
    ]
  }
}
